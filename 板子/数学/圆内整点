//https://codeforces.com/contest/1971/problem/F
#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

void solve() {
	int r;
    cin >> r;
    ll ans = 0;
    for (int i = 0; i <= r; i++) {
    	ans += sqrt(1ll*(r+1)*(r+1) - 1ll*i*i - 1);
    	if (i < r) ans -= int(sqrt(1ll*r*r - 1ll*i*i - 1));
	}
	cout << ans*4 << '\n';
    
}

int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr); 
    
    int t;
    cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}

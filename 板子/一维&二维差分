//一维
//求完差分，再求前缀和
//https://oj.socoding.cn/contest/problem?id=636&pid=9
#include<cstdio>
#include<vector>
using namespace std;
int main(){
	int n, m;
	scanf("%d%d", &n, &m);
	vector<long long> s(n+1,0);
	while(m--){
		int l, r, v;
		scanf("%d%d%d", &l, &r, &v);
		s[l]+=v;
		if(r<n) s[r+1]-=v;
	}
	for(int i=1;i<=n;i++){
		s[i]+=s[i-1];
		printf("%lld ", s[i]);
	}
	return 0;
}


//二维差分
//
